<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cd.ex.leovs09.experiment_content_discavery">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".image_swipe.vertical.SwipeVerticalActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_swipe"
            android:parentActivityName=".MainActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cd.ex.leovs09.experiment_content_discavery.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".image_swipe.horizontal.SwipeHorizontalActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_swipe_horizontal"
            android:parentActivityName=".MainActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cd.ex.leovs09.experiment_content_discavery.MainActivity" />
        </activity>
        <activity
            android:name=".youtube_swipe.horizontal.SwipeYouTubeHorizontalActivity"
            android:label="@string/title_activity_youtube_with_fragment"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cd.ex.leovs09.experiment_content_discavery.MainActivity" />
        </activity>
        <activity
            android:name=".youtube_swipe.vertical.SwipeYouTubeVerticalActivity"
            android:label="@string/title_activity_swipe_you_tube_vertical"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cd.ex.leovs09.experiment_content_discavery.MainActivity" />
        </activity>
    </application>

</manifest>